<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    android:gravity="center">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/time_size"
        android:layout_margin="0dp"
        android:padding="0dp"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/date_size"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/secondary_text"
        android:layout_margin="0dp"
        android:padding="0dp"
        />

    <View
        android:layout_margin="@dimen/date_padding"
        android:layout_width="@dimen/line_length"
        android:layout_height="1px"
        android:background="@color/primary_light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/image"
            android:contentDescription="@string/cont_desc_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size" />

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/temp_size"
            android:padding="@dimen/weather_padding"
            />

        <TextView
            android:id="@+id/low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/temp_size"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/secondary_text"
            />
    </LinearLayout>

</LinearLayout>